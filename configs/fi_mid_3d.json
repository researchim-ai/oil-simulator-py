{
  "description": "Fully implicit 3D, BoomerAMG preconditioned JFNK (30x30x5)",
  "output_filename": "fi_mid_3d",
  "save_vtk": false,

  "simulation": {
    "solver_type": "fully_implicit",
    "total_time_days": 1.0,
    "time_step_days": 0.02,

    "jacobian": "jfnk",
    "autograd_threshold_cells": 20000,
    "newton_max_iter": 15,
    "newton_tolerance": 1e-6,
    "newton_rtol": 1e-4,

    "linear_solver": {
      "backend": "hypre",
      "tol": 1e-8,
      "max_iter": 400
    },

    "max_pressure_change": 0.2,
    "max_saturation_change": 0.05,

    "max_time_step_attempts": 4,
    "verbose": true,
    "use_cuda": true
  },

  "reservoir": {
    "dimensions": [30, 30, 5],
    "grid_size": [20.0, 20.0, 5.0],
    "porosity": 0.22,
    "permeability": 150,
    "k_vertical_fraction": 0.2
  },

  "fluid": {
    "pressure": 20.0,
    "s_w": 0.2,
    "mu_oil": 1.5,
    "mu_water": 0.6,
    "rho_oil": 850,
    "rho_water": 997,
    "c_oil": 4e-5,
    "c_water": 4e-5,
    "c_rock": 4e-5,

    "relative_permeability": {
      "sw_cr": 0.2,
      "so_r": 0.15,
      "nw": 2.0,
      "no": 2.0
    },
    "capillary_pressure": {
      "pc_scale": 0.0
    }
  },

  "wells": [
    {
      "name": "INJ",
      "type": "injector",
      "coordinates": [5, 5, 2],
      "radius": 0.15,
      "control": { "type": "rate", "value": 800 }
    },
    {
      "name": "PROD",
      "type": "producer",
      "coordinates": [25, 25, 2],
      "radius": 0.15,
      "control": { "type": "rate", "value": 800 }
    }
  ]
} 