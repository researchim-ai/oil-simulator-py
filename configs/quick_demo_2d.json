{
  "description": "Quick 2-D demo: 100x100x1 grid, strong 5-spot pattern; visible saturation front after few days",
  "output_filename": "quick_2d_demo",
  "save_vtk": true,

  "simulation": {
    "solver_type": "fully_implicit",
    "total_time_days": 1.0,
    "time_step_days": 0.1,

    "jacobian": "jfnk",
    "newton_max_iter": 10,
    "newton_tolerance": 1e-6,
    "newton_rtol": 1e-4,

    "linear_solver": {
      "backend": "hypre",
      "tol": 1e-8,
      "max_iter": 300
    },

    "max_time_step_attempts": 4,
    "verbose": true,
    "use_cuda": false
  },

  "reservoir": {
    "dimensions": [100, 100, 1],
    "grid_size": [10.0, 10.0, 2.0],
    "porosity": 0.22,
    "permeability": 300,
    "k_vertical_fraction": 1.0
  },

  "fluid": {
    "pressure": 20.0,
    "s_w": 0.2,
    "mu_oil": 1.5,
    "mu_water": 0.5,
    "rho_oil": 850,
    "rho_water": 997,
    "c_oil": 4e-5,
    "c_water": 4e-5,
    "c_rock": 4e-5,

    "relative_permeability": {
      "sw_cr": 0.2,
      "so_r": 0.15,
      "nw": 2.0,
      "no": 2.0
    },
    "capillary_pressure": {
      "pc_scale": 0.0
    }
  },

  "wells": [
    { "name": "INJ_NW", "type": "injector",  "coordinates": [5, 5, 0],   "radius": 0.15, "control": { "type": "rate", "value": 25000 } },
    { "name": "INJ_NE", "type": "injector",  "coordinates": [95, 5, 0],  "radius": 0.15, "control": { "type": "rate", "value": 25000 } },
    { "name": "INJ_SW", "type": "injector",  "coordinates": [5, 95, 0],  "radius": 0.15, "control": { "type": "rate", "value": 25000 } },
    { "name": "INJ_SE", "type": "injector",  "coordinates": [95, 95, 0], "radius": 0.15, "control": { "type": "rate", "value": 25000 } },

    { "name": "PROD_C", "type": "producer", "coordinates": [50, 50, 0], "radius": 0.15, "control": { "type": "rate", "value": 40000 } }
  ]
} 