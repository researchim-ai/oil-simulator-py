{
  "description": "Industrial-scale 3D fully-implicit run (60x60x10) with high rates to visualise production fronts",
  "output_filename": "industrial_3d_demo",
  "save_vtk": true,

  "simulation": {
    "solver_type": "fully_implicit",
    "total_time_days": 10.0,
    "time_step_days": 0.1,

    "jacobian": "jfnk",
    "newton_max_iter": 12,
    "newton_tolerance": 1e-6,
    "newton_rtol": 1e-4,

    "linear_solver": {
      "backend": "hypre",
      "tol": 1e-8,
      "max_iter": 400
    },

    "max_pressure_change": 0.5,
    "max_saturation_change": 0.1,

    "max_time_step_attempts": 4,
    "verbose": true,
    "use_cuda": true
  },

  "reservoir": {
    "dimensions": [60, 60, 10],
    "grid_size": [20.0, 20.0, 5.0],
    "porosity": 0.25,
    "permeability": 200,
    "k_vertical_fraction": 0.15
  },

  "fluid": {
    "pressure": 20.0,
    "s_w": 0.2,
    "mu_oil": 1.5,
    "mu_water": 0.6,
    "rho_oil": 850,
    "rho_water": 997,
    "c_oil": 4e-5,
    "c_water": 4e-5,
    "c_rock": 4e-5,

    "relative_permeability": {
      "sw_cr": 0.2,
      "so_r": 0.15,
      "nw": 2.0,
      "no": 2.0
    },
    "capillary_pressure": {
      "pc_scale": 0.0
    }
  },

  "wells": [
    {
      "name": "INJ_NW",
      "type": "injector",
      "coordinates": [5, 5, 5],
      "radius": 0.15,
      "control": { "type": "rate", "value": 12000 }
    },
    {
      "name": "INJ_NE",
      "type": "injector",
      "coordinates": [55, 5, 5],
      "radius": 0.15,
      "control": { "type": "rate", "value": 12000 }
    },
    {
      "name": "INJ_SW",
      "type": "injector",
      "coordinates": [5, 55, 5],
      "radius": 0.15,
      "control": { "type": "rate", "value": 12000 }
    },
    {
      "name": "INJ_SE",
      "type": "injector",
      "coordinates": [55, 55, 5],
      "radius": 0.15,
      "control": { "type": "rate", "value": 12000 }
    },

    {
      "name": "PROD_N",
      "type": "producer",
      "coordinates": [30, 5, 5],
      "radius": 0.15,
      "control": { "type": "rate", "value": 12000 }
    },
    {
      "name": "PROD_S",
      "type": "producer",
      "coordinates": [30, 55, 5],
      "radius": 0.15,
      "control": { "type": "rate", "value": 12000 }
    },
    {
      "name": "PROD_W",
      "type": "producer",
      "coordinates": [5, 30, 5],
      "radius": 0.15,
      "control": { "type": "rate", "value": 12000 }
    },
    {
      "name": "PROD_E",
      "type": "producer",
      "coordinates": [55, 30, 5],
      "radius": 0.15,
      "control": { "type": "rate", "value": 12000 }
    },
    {
      "name": "PROD_C",
      "type": "producer",
      "coordinates": [30, 30, 5],
      "radius": 0.15,
      "control": { "type": "rate", "value": 15000 }
    }
  ]
} 