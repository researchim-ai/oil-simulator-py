    "dimensions": [60, 60, 10],
    "grid_size": [25.0, 25.0, 5.0],
    "porosity": 0.25,
    "permeability": 300,
    "k_vertical_fraction": 0.2
  },

  "fluid": {
    "pressure": 15.0,
    "s_w": 0.2,
    "mu_oil": 2.0,
    "mu_water": 0.9,
    "rho_oil": 820,
    "rho_water": 1000,
    "c_oil": 1.2e-5,
    "c_water": 4.0e-5,
    "c_rock": 5.0e-5,

    "relative_permeability": {
      "sw_cr": 0.2,
      "so_r": 0.2,
      "nw": 2.0,
      "no": 2.0
    },
    "capillary_pressure": {
      "pc_scale": 0.0
    }
  },

