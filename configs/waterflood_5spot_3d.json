{
  "description": "Waterflood 5-spot pattern (4×4) в кубе 60×60×10; 16 injectors @150k, 25 producers @-40k. Net +1.4e6 m³/d ≈ 5 % PV/d.",
  "output_filename": "waterflood_5spot_60x60x10_run",
  "save_vtk": true,

  "simulation": {
    "solver_type": "fully_implicit",
    "total_time_days": 365.0,
    "time_step_days": 0.25,

    "jacobian": "jfnk",
    "newton_max_iter": 30,
    "newton_tolerance": 1e-6,
    "newton_rtol": 1e-4,

    "backend": "geo",
    "smoother": "chebyshev",
    "trust_radius": 30.0,

    "max_time_step_attempts": 6,
    "verbose": true,
    "use_cuda": true,
    "steps_per_output": 20,
    "pressure_weight": 1e-6,

    "fix_pressure_drift": false,

    "dt_min": 3600.0,
    "adaptive_dt": true
  },

