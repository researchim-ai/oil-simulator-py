{
    "description": "A medium-sized 2D case for a more realistic simulation.",
    "output_filename": "medium_2d_final",
    "save_vtk": true,
    "simulation": {
        "solver_type": "fully_implicit",
        "total_time_days": 180,
        "time_step_days": 2.0,
        "save_interval": 30,
        "animation_fps": 5,
        "newton_max_iter": 20,
        "newton_tolerance": 5e-4,
        "jacobian_regularization": 1e-7,
        "damping_factor": 0.7,
        "max_time_step_attempts": 5,
        "dt_increase_factor": 1.25,
        "dt_reduction_factor": 2.0,
        "use_cuda": true
    },
    "reservoir": {
        "dimensions": [100, 100, 1],
        "grid_size": [20.0, 20.0, 10.0],
        "porosity": 0.2,
        "permeability": 100,
        "k_vertical_fraction": 1.0
    },
    "fluid": {
        "pressure": 20.0,
        "s_w": 0.1,
        "mu_oil": 1.0,
        "mu_water": 0.5,
        "rho_oil": 850.0,
        "rho_water": 1000.0,
        "c_oil": 4e-5,
        "c_water": 4e-5,
        "c_rock": 4e-5,
        "relative_permeability": {
            "sw_cr": 0.1,
            "so_r": 0.2,
            "nw": 2.0,
            "no": 2.0
        },
        "capillary_pressure": {
            "pc_scale": 0.1e6,
            "pc_exponent": 1.5
        }
    },
    "wells": [
        {
            "name": "PROD-1",
            "type": "producer",
            "coordinates": [25, 25, 0],
            "radius": 0.1,
            "control": {
                "type": "rate",
                "value": 50.0
            }
        },
        {
            "name": "INJ-1",
            "type": "injector",
            "coordinates": [75, 75, 0],
            "radius": 0.1,
            "control": {
                "type": "rate",
                "value": 50.0
            }
        }
    ]
} 