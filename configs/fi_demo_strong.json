{
  "description": "Strong injection/production to demonstrate FI solver iterations",
  "output_filename": "fi_demo_strong",
  "save_vtk": false,

  "simulation": {
    "solver_type": "fully_implicit",
    "jacobian": "jfnk",
    "total_time_days": 1,
    "time_step_days": 0.02,
    "save_interval": 9999,
    "newton_max_iter": 20,
    "newton_tolerance": 1e-6,
    "verbose": true
  },

  "reservoir": {
    "dimensions": [10, 10, 1],
    "grid_size": [10.0, 10.0, 5.0],
    "porosity": 0.25,
    "permeability": 200,
    "k_vertical_fraction": 1.0
  },

  "fluid": {
    "pressure": 20.0,
    "s_w": 0.2,
    "mu_oil": 5.0,
    "mu_water": 1.0,
    "rho_oil": 850.0,
    "rho_water": 1000.0,
    "c_oil": 1e-5,
    "c_water": 1e-5,
    "c_rock": 1e-5,
    "relative_permeability": {
      "nw": 2,
      "no": 2,
      "sw_cr": 0.2,
      "so_r": 0.2
    },
    "capillary_pressure": {
      "pc_scale": 0.0,
      "pc_exponent": 1.5
    }
  },

  "wells": [
    {
      "name": "Injector",
      "type": "injector",
      "i": 1,
      "j": 5,
      "k": 0,
      "radius": 0.15,
      "control_type": "rate",
      "control_value": 500.0
    },
    {
      "name": "Producer",
      "type": "producer",
      "i": 8,
      "j": 5,
      "k": 0,
      "radius": 0.15,
      "control_type": "bhp",
      "control_value": 5.0
    }
  ]
} 