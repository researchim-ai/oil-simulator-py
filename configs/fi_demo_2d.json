{
  "description": "Demo fully implicit 2-D case with injector/producer, 100 time steps",
  "output_filename": "fi_demo2d",
  "save_vtk": false,

  "simulation": {
    "solver_type": "fully_implicit",
    "jacobian": "jfnk",
    "total_time_days": 10,
    "time_step_days": 0.1,
    "save_interval": 9999,
    "newton_max_iter": 15,
    "newton_tolerance": 1e-4,
    "verbose": false
  },

  "reservoir": {
    "dimensions": [30, 30, 1],
    "grid_size": [10.0, 10.0, 5.0],
    "porosity": 0.25,
    "permeability": 100,
    "k_vertical_fraction": 1.0
  },

  "fluid": {
    "pressure": 20.0,
    "s_w": 0.2,
    "mu_oil": 5.0,
    "mu_water": 1.0,
    "rho_oil": 850.0,
    "rho_water": 1000.0,
    "c_oil": 1e-5,
    "c_water": 1e-5,
    "c_rock": 1e-5,
    "relative_permeability": {
      "nw": 2,
      "no": 2,
      "sw_cr": 0.2,
      "so_r": 0.2
    },
    "capillary_pressure": {
      "pc_scale": 0.0,
      "pc_exponent": 1.5
    }
  },

  "wells": [
    {
      "name": "Injector",
      "type": "injector",
      "i": 5,
      "j": 15,
      "k": 0,
      "radius": 0.1,
      "control_type": "rate",
      "control_value": 100.0
    },
    {
      "name": "Producer",
      "type": "producer",
      "i": 25,
      "j": 15,
      "k": 0,
      "radius": 0.1,
      "control_type": "bhp",
      "control_value": 15.0
    }
  ]
} 