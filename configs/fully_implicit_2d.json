{
    "description": "Средняя 2D модель для тестирования полностью неявного решателя",
    "output_filename": "medium_2d_fully_implicit",
    "save_vtk": false,

    "reservoir": {
        "dimensions": [50, 50, 1],
        "grid_size": [10.0, 10.0, 2.0],
        "porosity": 0.2,
        "permeability": 100.0,
        "k_vertical_fraction": 0.1
    },

    "simulation": {
        "solver_type": "fully_implicit",
        "total_time_days": 100,
        "time_step_days": 2,
        "save_interval": 20,
        "newton_max_iter": 20,
        "newton_tolerance": 5e-4,
        "jacobian_regularization": 1e-7,
        "damping_factor": 0.7,
        "max_time_step_attempts": 5,
        "dt_increase_factor": 1.25,
        "dt_reduction_factor": 2.0,
        "use_cuda": true
    },
    
    "fluid": {
        "pressure": 200.0,
        "s_w": 0.1,
        "mu_oil": 10.0,
        "mu_water": 1.0,
        "rho_oil": 850.0,
        "rho_water": 1000.0,
        "c_oil": 1e-9,
        "c_water": 4e-10,
        "c_rock": 3e-11,
        
        "relative_permeability": {
            "sw_cr": 0.1,
            "so_r": 0.2,
            "nw": 2.0,
            "no": 2.0
        },

        "capillary_pressure": {
            "pc_scale": 0.1e6,
            "pc_exponent": 1.5
        }
    },

    "wells": [
        {
            "name": "Injector1",
            "type": "injector",
            "coordinates": [5, 24, 0],
            "control": { "type": "rate", "value": 200.0 },
            "radius": 0.15
        },
        {
            "name": "Producer1",
            "type": "producer",
            "coordinates": [44, 24, 0],
            "control": { "type": "bhp", "value": 190.0 },
            "radius": 0.15
        }
    ]
} 